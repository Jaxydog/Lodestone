{
    "schemaVersion": 1,

    "name": "Lodestone",
    "description": "An automatic content loader for Fabric mods.",
    "authors": [ "Jaxydog" ],
    "contributors": [ ],
    "contact": {
        "sources": "https://github.com/Jaxydog/Lodestone",
        "issues": "https://github.com/Jaxydog/Lodestone/issues",
        "homepage": "https://modrinth.com/mod/lodestone-lib"
    },

    "id": "lodestone",
    "version": "${version}",
    "license": "LGPL-3.0-or-later",
    "icon": "assets/lodestone/icon.png",

    "environment": "*",
    "entrypoints": {
        "main": [ "dev.jaxydog.lodestone.Lodestone" ],
        "preLaunch": [ "dev.jaxydog.lodestone.LodestonePreLaunch" ]
    },
    "custom": {
        "modmenu": {
            "badges": [ "library" ]
        }
    },

    "depends": {
        "fabric-data-generation-api-v1": "*",
        "fabricloader": ">=0.4.0",
        "minecraft": ">=1.18",
        "java": ">=17"
    }
}
